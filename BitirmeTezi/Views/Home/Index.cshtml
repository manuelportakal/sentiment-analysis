@model BitirmeTeziML.Model.ModelInput

@{
    ViewData["Title"] = "Emoji Tespit";
}
<h2>Emoji Tespiti</h2>
<hr />
@{
    var score = ViewBag.Score;
    var prediction = ViewBag.Prediction;
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Sentence" class="control-label"></label>
                <input asp-for="Sentence" class="form-control" />
                <span asp-validation-for="Sentence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Check" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div class="col-md-offset-4 col-md-4">
        @if (score != null)
        {
            <h3>Tahmin:@prediction</h3>
            @foreach (var item in score)
            {
                <h3>@item</h3>
            }

        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}